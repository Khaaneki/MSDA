{% extends 'district.html.twig' %}

{% block title %}{% endblock %}


{% block body %}
<div class="container">
{% for message in app.flashes('success') %}
<div class="alert alert-success mt-4">
{{ message }}
</div>
{% endfor %}
<div class="container">
<div class="row">
<div class="col">
    <h1>Validation de la commande</h1>
</div>
</div>
<div class="row justify-content-center d-grid text-light">
    {{ form_errors(CommandeFormType) }}
    {{ form_start(CommandeFormType) }}
        {{ form_row(CommandeFormType.adresse_Livraison) }}
        {{ form_row(CommandeFormType.adresse_Facturation) }} 
        {{ form_row(CommandeFormType.Paiement) }}
        {{ form_row(CommandeFormType.CGU_validation) }}

        <button type="submit" class="btn btn-lg btn-secondary mt-3">Commander</button>
    {{ form_end(CommandeFormType) }}

</div>
{% endblock %}